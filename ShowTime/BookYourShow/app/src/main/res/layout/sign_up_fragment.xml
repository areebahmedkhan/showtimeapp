<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="#FFFFFF"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_username"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/sign_up"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:id="@+id/txt_username"
        android:hint="Name"
        android:layout_toRightOf="@+id/icon_username">

    </EditText>

    <View style="@style/Divider"
        android:layout_below="@+id/txt_username"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_email"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/icon_username"
        android:layout_marginLeft="10dp"
        android:src="@drawable/login_email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:id="@+id/txt_email"
        android:hint="Email"
        android:layout_below="@+id/txt_username"
        android:layout_toRightOf="@+id/icon_email"
        android:password="true">

    </EditText>

    <View style="@style/Divider"
        android:layout_below="@+id/txt_email"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_pass"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/icon_email"
        android:layout_marginLeft="10dp"
        android:src="@drawable/password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:id="@+id/txt_pass"
        android:hint="Password"
        android:layout_below="@+id/txt_email"
        android:layout_toRightOf="@+id/icon_email"
        android:password="true">

    </EditText>

    <View style="@style/Divider"
        android:layout_below="@+id/txt_pass"/>


</RelativeLayout>